{
    "workbench.colorTheme": "Visual Studio 2022 Blue",
    "clang-format.executable": "D:\\LLVM\\bin\\clang-format.exe",
    "clangd.path": "D:\\LLVM\\bin\\clangd.exe",
    "clangd.arguments": [
        "--header-insertion=never",
    ],
    //vscode内置output窗口不输出汉字乱码
    "cmake.outputLogEncoding": "utf-8",
    "cmake.configureSettings": {
    "CMAKE_BUILD_TYPE": "${buildType}"
    },
    "cmake.generator": "Ninja",
    //"cmake.loggingLevel": "debug",//查看build的日志
    "C_Cpp.intelliSenseEngine": "disabled",
    "files.associations": {
        "xstring": "cpp",
        "vector": "cpp"
    }, 
    "search.exclude": {//设置搜索排除范围
        "**/build": true,//排除build目录
    },
}