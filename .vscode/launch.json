{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug-preprocess",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/run/bin_Debug/Preprocess.exe",//程序入口
            "console": "integratedTerminal",//执行cout输出在哪个终端
            "cwd": "${workspaceRoot}/run/bin_Debug",//指定工作目录
            "args": [
                "-d","1",
                "-p","8",
                "-t","1800",
                //"--batch",".*.*",//批量执行模式, 根据给定的通配符并行执行多个文件
                "--single","00009.obj",//单一执行模式, 只执行一个文件
                "--dataset","PolyAtlas-Sample-30",
                //"--use_individual_model_dir",
                "--parallel_level","process",
                "--run_name","test",
                "--clean"
                ],//参数
        },
        {
            "name": "release-preprocess",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/run/bin_Release/Preprocess.exe",//程序入口
            "console": "integratedTerminal",//执行cout输出在哪个终端
            "cwd": "${workspaceRoot}/run/bin_Release",//指定工作目录
            "args": [
                "-d","1",
                "-p","4",
                "-t","1800",
                "--batch",".*0001.*",//批量执行模式, 根据给定的通配符并行执行多个文件
                //"--single","00019.obj",//单一执行模式, 只执行一个文件
                "--dataset","PolyAtlas-Sample-30",
                //"--use_individual_model_dir",
                "--parallel_level","process",
                "--run_name","base",
                "--clean"
                ],//参数
        },
        {
            "name": "generate project",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pa-script/etc/reset_compile_commands.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "release-evaluator",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/run/bin_Release/evaluator.exe",//程序入口
            "console": "integratedTerminal",//执行cout输出在哪个终端
            "cwd": "${workspaceRoot}/run/bin_Release",//指定工作目录
            "args": [
                "-d","1",
                "--cmd_idx","0",
                "--work1","base",
                "--work2","reference"
                ],//参数
        },
        {
            "name": "debug-evaluator",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/run/bin_Debug/evaluator.exe",//程序入口
            "console": "integratedTerminal",//执行cout输出在哪个终端
            "cwd": "${workspaceRoot}/run/bin_Debug",//指定工作目录
            "args": [
                "-d","1",
                "--cmd_idx","0",
                "--work1","base",
                "--work2","reference",
                ],//参数
            "preLaunchTask": "build-preprocess-debug"
        }
    ]
}